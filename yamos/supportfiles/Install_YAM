; /// Setting up
(set #def_lang_English              0)
(set #def_lang_Bosanski             1)
(set #def_lang_Czech                2)
(set #def_lang_Dansk                4)
(set #def_lang_Deutsch              8)
(set #def_lang_Espanol             16)
(set #def_lang_Francais            32)
(set #def_lang_Italiano            64)
(set #def_lang_Magyar             128)
(set #def_lang_Norsk              256)
(set #def_lang_Polski             512)
(set #def_lang_Portugues         1024)
(set #def_lang_Portugues_Brasil  2048)
(set #def_lang_Russian           4096)
(set #def_lang_Slovensko         8192)
(set #def_lang_Srpski           16384)
(set #def_lang_Suomi            32768)
(set #def_lang_Svenska          65536)
(set #def_lang_Turkce          131072)

(set #def_doc_English            0)
(set #def_doc_Deutsch            1)
(set #def_doc_Espanol            2)
(set #def_doc_Francais           3)
(set #def_doc_Italiano           4)
(set #def_doc_Slovensko          5)
; ///
;----------------------------------------------------------------------------
;/// ***** English
(set #def_cat_lang #def_lang_English)
(set #def_doc_lang #def_doc_English)
(set #wrongOS  "YAM needs at least OS 3.0 to run!\n")
(set #wrongMUI "YAM needs at least MUI 3.8 to run!\n")
(set #wrongCPU "YAM needs at least a 68020 CPU to run!\n")
(set #proc_type "Select which version of YAM you would like to install:")
(set #proc_help (cat "Here you can select which version of YAM to install "
                     "depending on the type of processor you own."))
(set #proc_020 "Optimized for 68020/030")
(set #proc_040 "Optimized for 68040")
(set #proc_060 "Optimized for 68060")
(set #proc_MOS "Optimized for MorphOS/PPC")
(set #YAM_dir  (cat "Please select a directory for YAM\n"
                    "(NO extra drawer will be created!)"))
(set #lang_catalog (cat "Which catalog file do you want to install?\n"
                        "(English language is built-in)"))
(set #lang_manual "Select language for online AmigaGuide help")
(set #icons_prompt "Which icon set do you want to install?\n")
(set #icons_help (cat "Please select which icon set you want to install:\n\n"
                      "- MagicWB (8 colors)\n"
                      "- ProLite (16 colors)\n"
                      "- NewIcons (32 colors)\n"
                      "- GlowIcons (64 colors)\n"
                      "- GlowIcons-2 (64 colors)"))
(set #icons_none "None")
(set #charset_help (cat "YAM can use character conversion tables for reading "
                        "and writing messages. These tables are a set of "
                        "plain text files installed in \"YAM:Charsets/\" which "
                        "describe how each character should be remapped when "
                        "reading and/or writing messages, for example to replace "
                        "accented vowels (ASCII8bit -> ASCII7bit), convert "
                        "ISO-Latin-2 to AmigaPL charset and so on.\n\n"
                        "If you don't need this feature, you may want not "
                        "to install these tables and save about 10kB of space "
                        "on disk.\n"))
(set #parser_help (cat "YAM 2.4+ offers an option to automatically find "
                       "the suitable charset to display every part of the "
                       "messages as they are read, which is especially "
                       "helpful for users in countries like Russia where "
                       "there isn't a commonly accepted charset - in fact, "
                       "currently this feature supports only the Win1250, "
                       "DOS866 and KOI8 charsets and therefore is especially "
                       "meant for Russian (cyrillic) users.\n\n"
                       "If you don't need this feature, you may want not to "
                       "install the needed parsers and save 50kB of space on disk.\n"))
(set #imagepool_prompt "Deleting \"libs:imagepool.library\"")
(set #imagepool_help (cat "The Toolbar.mcc 15.8 class provided with YAM does not "
                          "support imagepool.library anymore. If nothing else "
                          "needs this library, you may want to delete it now.\n"))
(set #yamtz_prompt "Deleting \"ENV(ARC):YAM_TZ\"")
(set #yamtz_help (cat "YAM 2.4+ no longer supports the \"YAM_TZ\" environment "
                      "variable. This is now entirely handled using Locale, "
                      "so you can safely delete this variable.\n"))
(set #assign_prompt (cat "A \"YAM:\" assign needs to be added to your "
                         "\"S:User-Startup\" file.\n\n"
                         "Do you mind?"))
(set #assign_help (cat "If this assign is not present, the next time you boot up "
                       "your machine the program will be unable to find the files "
                       "and drawers it needs to run.\n"))
(set #done_1   (cat "\nYAM has been successfully installed.\n\n"
                    "Double click the \"YAM\" icon in the\n"))
(set #done_2        "\ndirectory to taste it.\n\nHave fun...")

; ///
; /// ***** Bosanski
(IF (= @language "bosanski")
(
(set #def_cat_lang #def_lang_Bosanski)
(set #wrongOS  "YAM zahtjeva minimalno OS3.0 da bi radio\n")
(set #wrongMUI "YAM zahtjeva minimalno MUI3.8 da bi radio\n")
(set #wrongCPU "YAM zahtjeva minimalno 68020 CPU da bi radio\n")
(set #proc_type "Izaberi koju verziju YAM-a zelis instalirati:")
(set #proc_help (cat "Ovdje mozes izabrati koju verziju YAM-a zelis instalirati "
                     "u zavisnosti od procesora koji imas."))
(set #proc_020 "Optimizirani za 68020/030")
(set #proc_040 "Optimizirani za 68040")
(set #proc_060 "Optimizirani za 68060")
(set #YAM_dir  (cat "Izaberi YAM-ovu glavnu ladicu\n"
                    "(nova ladica NECE biti stvorena!)"))
(set #lang_catalog (cat "Koji katalog zelis instalirati?\n"
                        "(Engleski jezik je ugradjen)"))
(set #lang_manual "Izaberi verziju AmigaGuide pomoci")
(set #icons_prompt "Koju grafiku zelis instalirati?\n")
(set #assign_prompt (cat "Assign YAM: bi trebao biti dodan u S:USER-STARTUP\n"
                         "Mogu li nastaviti?"))
(set #assign_help (cat "Kada te Installer pita zelis li ubaciti ovaj assign "
                       "u S:user-startup trebao bi pritisnuti dugme \"Nastavi\"; "
                       "U suprotnom, slijedeci put kada ucitas Workbench, program "
                       "nece biti u stanju da pronadje potrebne fileove i ladice.\n"))
(set #done_1   (cat "\nYAM je uspjesno instaliran.\n\n"
                    "Klikni \"YAM\" ikonu u ladici\n"))
(set #done_2        "\nda ga isprobas.\n\nZabavi se...")
)
)
; ///
; /// ***** Czech
(IF (= @language "czech")
(
(set #def_cat_lang #def_lang_Czech)
(set #wrongOS  "YAM vyùaduje ke spuîtëní OS3.0 nebo novëjîí\n")
(set #wrongMUI "YAM vyùaduje ke spuîtëní MUI3.8 nebo novëjîí\n")
(set #wrongCPU "YAM vyùaduje ke spuîtëní procesor 68020 nebo lepîí\n")
(set #proc_type "Vyberte verzi programu YAM, kterou chcete nainstalovat:")
(set #proc_help (cat "V této çásti instalace si mûùete vybrat verzi programu "
                     "YAM optimalizovanou právë pro váî procesor."))
(set #proc_020 "Optimalizováno pro 68020/030")
(set #proc_040 "Optimalizováno pro 68040")
(set #proc_060 "Optimalizováno pro 68060")
(set #proc_MOS "Optimalizováno pro MorphOS/PPC")
(set #YAM_dir  (cat "Vyberte domovský adresáê pro YAM\n"
                    "(adresáê NEBUDE vytvoêen!)"))
(set #lang_catalog (cat "Který z lokalizaçních katalogû chcete nainstalovat?\n"
                        "(angliçtinu pouùívá program internë)"))
(set #lang_manual "Vyberte jazykovou mutaci nápovëdy k programu")
(set #icons_prompt "Kam chcete nainstalovat arexxové skripty?")
(set #icons_help (cat "Vyberte prosím poùadovanou sadu ikon:\n\n"
                      "- MagicWB (8 barev)\n"
                      "- ProLite (16 barev)\n"
                      "- NewIcons (32 barev)\n"
                      "- GlowIcons (64 barev)\n"
                      "- GlowIcons-2 (64 barev)"))
(set #icons_none "Ùádné")
(set #charset_help (cat "YAM pouùívá ke çtení a odesílání zpráv konverzní tabulky. "
                        "Tabulky jsou prostý text, naleznete je  v \"YAM:Charsets/\" "
                        "a slouùí k pêemapování znakû z jednoho kódování do druhého.\n\n"
                        "Pokud zmínëné moùnosti nechcete vyuùít, dané "
                        "programy neinstalujte (uîetêíte 10 kB místa na disku.\n"))
(set #parser_help (cat "YAM 2.4 a novëjîí nabízí moùnost automatického "
                       "zjiîtëní a zobrazení odpovídající kódové stránky. "
                       "V souçasnosti jsou podporována kódování Win1250, "
                       "DOS866 a KOI8.\n\n"
                       "Pokud zmínëné moùnosti nechcete vyuùít, dané "
                       "programy neinstalujte (uîetêíte 50 kB místa na disku.\n"))
(set #imagepool_prompt "Odstranëní knihovny \"libs:imagepool.library\"")
(set #imagepool_help (cat "Externí têída MUI Toolbar.mcc (v15.8) distribuovaná "
                          "spoleçnë s tímto balíkem nadále nevyuùívá knihovnu "
                          "imagepool.library. Pokud ùádný jiný program tuto "
                          "knihovnu nevyùaduje, máte moùnost ji smazat.\n"))
(set #yamtz_prompt "Odstranëní \"ENV(ARC):YAM_TZ\"")
(set #yamtz_help (cat "YAM od verze 2.4 nepodporuje speciální promënnou "
                      "\"YAM_TZ\" a namísto toho pouùívá systém Locale. "
                      "Promënnou není potêeba a mûùete ji smazat.\n"))
(set #assign_prompt (cat "Ke správné Do skriptu S:User-startup je têeba pêidat "
                         "pêíkaz assign YAM:\n"
                         "Nemáte proti tomu námitky?"))
(set #assign_help (cat "I kdyù zde máte volbu, zda pêidat nebo nepêidat toto pêiêazení "
                       "do S:user-startup, mëli byste vùdy zmáçknout tlaçítko "
                       "\"Pokraçovat\". V opaçném pêípadë YAM po restartu poçítaçe "
                       "nenalezne soubory a adresáêe potêebné ke správné funkci.\n"))
(set #done_1   (cat "\nProgram YAM byl úspëînë nainstalován.\n\n"
                    "Kliknëte na ikonu \"YAM\" v pêísluîném\n"))
(set #done_2        "\nadresáêi a vyzkouîejte.\n\nUùijte si to...")
)
)
