; /// ***** Español
(IF (= @language "español")
(
(set #def_cat_lang #def_lang_Espanol)
(set #def_doc_lang #def_doc_Espanol)
(set #wrongOS  "YAM necesita como mínimo el AmigaOS 3.0 para funcionar.\n")
(set #wrongMUI "YAM necesita como mínimo MUI 3.8 para funcionar.\n")
(set #wrongCPU "YAM necesita como mínimo una CPU 68020 para funcionar.\n")
(set #proc_type "Elija la versión de YAM que desea instalar:")
(set #proc_help (cat "Seleccione la versión de YAM a instalar "
                     "en función del procesador que posea."))
(set #proc_020 "Optimizado para 68020/030")
(set #proc_040 "Optimizado para 68040")
(set #proc_060 "Optimizado para 68060")
(set #proc_MOS "Optimizado para MorphOS/PPC")
(set #YAM_dir  (cat "Elija el directorio donde desea instalar YAM\n"
                    "(¡no se creará ningún directorio dentro de éste!)"))
(set #lang_catalog (cat "¿Qué idiomas (catálogos) quiere instalar?\n"
                        "(por omisión, YAM funciona en inglés)"))
(set #lang_manual "Elija el idioma para la ayuda en línea")
(set #icons_prompt "¿Qué juego de iconos desea instalar?\n")
(set #icons_help (cat "Por favor, elija el juego de iconos que desea instalar:\n\n"
                      "- MagicWB (8 colores)\n"
                      "- ProLite (16 colores)\n"
                      "- NewIcons (32 colores)\n"
                      "- GlowIcons (64 colores)\n"
                      "- GlowIcons-2 (64 colores)"))
(set #icons_none "Ninguno")
(set #charset_help (cat "YAM puede utilizar tablas de juegos de caracteres "
                        "para leer y escribir mensajes. Estas tablas son un "
                        "juego de ficheros que se instalan en \"YAM:Charsets/\" "
                        "y que describen cómo debería remapearse cada carácter "
                        "a la hora de leer y/o escribir mensajes, por ejemplo "
                        "para sustituir las vocales acentuadas (para pasar de "
                        "ASCII de 8 bits a ASCII de 7 bits), convertir "
                        "ISO-Latin-2 al juego de caracteres AmigaPL, etc.\n\n"
                        "Si no necesita nada de esto, quizá prefiera no instalar "
                        "estas tablas y ahorrarse unos 10 kB de espacio en disco.\n"))
(set #parser_help (cat "YAM 2.4+ ofrece la posibilidad de hallar automáticamente "
                       "el juego de caracteres apropiado para mostrar cada parte "
                       "de los mensajes cuando son leídos, lo cual resulta "
                       "especialmente útil para los usuarios de países como "
                       "Rusia, donde no existe un juego de caracteres aceptado "
                       "como estándar; de hecho, esta función soporta solamente "
                       "los juegos de caracteres Win2150, DOS866 y KOI8, así que "
                       "quizá sólo resulte de utilidad para los usuarios rusos "
                       "(cirílico).\n\n"
                       "Si no necesita esto para nada, quizá prefiera no instalar "
                       "los correspondientes intérpretes y ahorrar 50kB de espacio "
                       "en disco.\n"))
(set #imagepool_prompt "Borrando \"libs:imagepool.library\"")
(set #imagepool_help (cat "La clase Toolbar.mcc 15.8 que acompaña a YAM ya no "
                          "usa imagepool.library para nada. Si ningún otro "
                          "software de su sistema utiliza esta librería, quizá "
                          "desee borrarla ahora.\n"))
(set #yamtz_prompt "Borrando \"ENV(ARC):YAM_TZ\"")
(set #yamtz_help (cat "YAM 2.4+ ya no soporta la variable de entorno \"YAM_TZ\". "
                      "Su función ha sido sustituida por rutinas nativas del "
                      "subsistema Locale, así que puede borrarla sin temor.\n"))
(set #assign_prompt (cat "Es necesario añadir la asignación \"YAM:\" al script "
                         "\"s:User-startup\"\n\n¿Está de acuerdo?"))
(set #assign_help (cat "Si no está presente esta asignación, la próxima vez "
                       "que arranque su Amiga el programa no será capaz de "
                       "encontrar los ficheros y directorios necesarios para "
                       "su funcionamiento.\n"))
(set #done_1   (cat "\nYAM ha sido instalado satisfactoriamente.\n\n"
                    "Pulse el icono de \"YAM\" en el directorio\n"))
(set #done_2        "\npara saborearlo.\n\n¡Que lo disfrute!")
)
)
