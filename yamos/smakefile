# Programs
CC = sc
CP = copy
RM = delete

# Files
OBJS = all_sas.o YAM.o YAM_AB.o YAM_CL.o YAM_CO.o YAM_COg.o YAM_COs.o \
  YAM_DI.o YAM_EA.o YAM_ER.o YAM_FI.o YAM_FO.o YAM_global.o YAM_locale.o \
  YAM_MA.o YAM_MAf.o YAM_md5.o YAM_MI.o YAM_RE.o YAM_rexx.o YAM_rexx_rxcl.o \
  YAM_rexx_rxif.o YAM_TR.o YAM_US.o YAM_UT.o YAM_WR.o

# Compiler flags
CPU      = 68020
OPTFLAGS = OPT OPTSIZE OPTINLOCAL OPTGO OPTLOOP OPTPEEP #OPTSCHED
DEBUG    = DEF DEBUG DEBUG=LINE NOOPT NOSTRIPDEBUG
# CPU can be defined outside, defaults to above
# OPTFLAGS are disabled by DEBUG!

CFLAGS = RESOPT NOVER PARM=R NOLINK DATA=FAR CODE=FAR ERRORREXX NOICONS\
  STRINGSECTION=FAR WARN=ALL IGNORE=147,306,62,165,148,178,61,212,120,51\
  IDLEN=60 INCLUDEDIR=includes STRIPDEBUG NOCHECKABORT UTILLIB SMALLCODE\
  DEF=__USE_SYSBASE $(OPTFLAGS) CPU=$(CPU) $(DEBUG)

YAM: $(OBJS)
  $(CC) $(CFLAGS) LINK "LINKOPT=MAP YAM.map,fhx FWIDTH 32 PWIDTH 32 SWIDTH 32"\
  LIB lib:scnb.lib lib:amiga.lib lib:debug.lib TO $@ WITH <<
  $(OBJS)
  <

.c.o:
  $(CC) $(CFLAGS) $*.c

clean: # leaves final YAM exe
  $(RM) \#?.(o|map|lnk) (YAM_locale.\#?)

cleanall:
  $(RM) \#?.(o|map|lnk) (YAM_locale.\#?|YAM)

copy:
  $(CP) YAM YAM:

#######################################

