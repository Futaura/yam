YAM_global.o: YAM_global.c YAM_global.h YAM_locale.h YAM_stringsizes.h
  $(CC) $(CFLAGS)  YAM_global.c\
  `rx >T:YAM-date.tmp "say 'DEF __YAM_VERDATE=' || '22'x ||\
  right(date(S),2)*1'.'substr(date(S),5,2)*1'.'left(date(S),4) ||\
  '22'x || ' DEF __YAM_VERDAYS=' || date('I')"`

YAM_locale.c: locale/YAM.cd C_h.sd C_c.sd
  ; # dummy entry to make smake happy

YAM_locale.h: locale/YAM.cd C_h.sd C_c.sd
  flexcat locale/YAM.cd YAM_locale.h=C_h.sd YAM_locale.c=C_c.sd

