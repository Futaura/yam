   (askdir
      (default YAM_def_dir)
      (prompt  #YAM_dir)
      (help    @askdir-help)
   )
)

(complete 5)

(if package_cpu
   (set cpu
      (askchoice
         (prompt #proc_type)
         (help #proc_help "\n" @askchoice-help)
         (choices #proc_020 #proc_040 #proc_060)
         (default cpu)
      )
   )
   (set cpu 0)
)

