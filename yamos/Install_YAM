   (set Catalog_lang
      (askoptions
         (prompt  #lang_catalog)
         (help @askoptions-help)
         (choices "Bosanski" "Czech" "Dansk" "Deutsch" "Español" "Français" "Italiano" "Magyar" "Norsk"
                  "Polski" "Português" "Português (Brasil)" "Russian" "Slovensko" "Srpski" "Suomi" "Svenska" "Türkçe"
         )
         (default #def_cat_lang)
      )
   )
   (set Catalog_lang #def_lang_English)
)

(complete 15)

