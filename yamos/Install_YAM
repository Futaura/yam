(set #def_lang_Francais            32)
(set #def_lang_Italiano            64)
(set #def_lang_Magyar             128)
(set #def_lang_Norsk              256)
(set #def_lang_Polski             512)
(set #def_lang_Portugues         1024)
(set #def_lang_Portugues_Brasil  2048)
(set #def_lang_Russian           4096)
(set #def_lang_Slovensko         8192)
(set #def_lang_Srpski           16384)
(set #def_lang_Suomi            32768)
(set #def_lang_Svenska          65536)
